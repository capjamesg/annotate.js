{

  "manifest_version": 2,
  "name": "highlight.js",
  "version": "1.0.3",

  "description": "Highlight web pages with your own notes.",

  "icons": {
    "48": "icons/paperclip.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["highlight/purify.min.js", "highlight/highlight.js", "highlight/home.js"],
      "css": ["highlight/highlight.css"]
    }
  ],
  "web_accessible_resources": [
      "highlight/purify.min.js"
  ],
  "browser_action": {
    "default_icon": "icons/paperclip.png",
    "default_popup": "highlight/home.html"
  },
  "permissions": [
    "storage"
  ]
}

